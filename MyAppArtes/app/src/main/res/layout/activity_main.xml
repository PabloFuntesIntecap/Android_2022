<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_titulo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/ic_portada2"

        />

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO - CATEGORIAS"
        android:textColor="#F40909"
        android:textSize="30dp"
        android:layout_gravity="center"

    />

    <!-- aqui empieza la lista desplegable formato de comentarios-->

    <ListView
        android:id="@+id/list_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        />
    <!-- recordar que sera una lista personaliza y se debe de tener un receptor-->
    <!-- para personalizar hay que crear una nuevo xml esto con clic derecho en  "layout"-->
    <!-- recordar que en la lista hay que poner match_parent en width-->
</LinearLayout>
